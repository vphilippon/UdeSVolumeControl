package testing;

import java.io.IOException;
import java.net.DatagramPacket;
import java.net.SocketException;

import utils.ClientUDP;
import utils.Serializer;

public class DummyClient {

	public static void main(String[] args) {
		try {
			ClientUDP cl = new ClientUDP();
			cl.connect("localhost", 9005);
			
			System.out.println("SENDING");
			cl.send(new Serializer<String>.serialize("helloworld"));
			
			DatagramPacket rep = cl.receive();
			String mess = (String) Serializer.deserialize(rep.getData());
			
			System.out.println("GOT REPLY");
			System.out.println(mess);
			
		} catch (SocketException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
